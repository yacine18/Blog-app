<%- include('../partials/header'); -%>
<%- include('../partials/navbar'); -%>



<div class="container mt-4">
  
  <div class="row mt-3 ml-5 mr-5 my-auto px-2">
    <% articles.forEach( (article)=> {%>
    <div class="card mt-4 my-2 col-md-3 ml-4 mr-5">
      <div class="card-body">
        <h5 class="card-title"><%= article.title%></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString()%></h6>
        <p class="card-text"><%= article.description%></p>
        <a type="btn btn-primary btn-block" href="<%= '/blog/article/' + article.id %>" class="card-link">Read More</a>

      </div>

    </div>
    <% }) %>

  </div>
</div>


<%- include('../partials/footer'); -%>