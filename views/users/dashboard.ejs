<%- include('../partials/header'); -%>
<%- include('../partials/DashboardNav'); -%>

  <div class="container mt-4">
   
    <a type="button" class="btn btn-outline-success mb-4" href="/blog/create">New Article</a>
      <h1 class="mb-4 text-center">All Articles</h1>
      <form class="form-inline my-2 mx-auto my-lg-0" action="/auth/dashboard/search" method="GET">
        <input class="form-control mr-sm-2 outline-none" id="q" name="q" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    <table class="table mt-3">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Created At</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% articles.forEach( (article)=> {%>
          <tr>
            <th scope="row"><%= article.id %></th>
            <td><%= article.title%></td>
            <td><%= article.description%></td>
            <td><%= article.createdAt.toLocaleDateString()%></td>
            <td>
                <a href="<%= '/auth/dashboard/delete/' + article.id %>" class=" btn btn-outline-danger">Remove Article</a>
                <a href="<%= '/auth/dashboard/edit/' + article.id %>" class="btn btn-outline-warning">Edit</a>
            </td>
          </tr>  
          <% }) %>
      </table>
  </div>


<%- include('../partials/footer'); -%>
